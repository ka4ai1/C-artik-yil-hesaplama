    case 7: printf("%d yilinin temmuz ayi 31 gundur",yil);
    break;
    case 8: printf("%d yilinin agustos ayi 31 gundur",yil);
    break;
    case 10: printf("%d yilinin ekim ayi 31 gundur",yil);
    break;
    case 12: printf("%d yilinin aralik ayi 31 gundur",yil);
    break;
}
}
else{
    
switch(ay){
    case 1: printf("%d yilinin ocak ayi 30 gundur",yil);
    break;
    case 3: printf("%d yilinin mart ayi 30 gundur",yil);
    break;
    case 4: printf("%d yilinin nisan ayi 30 gundur",yil);
    break;
    case 5: printf("%d yilinin mayis ayi 30 gundur",yil);
    break;
    case 6: printf("%d yilinin haziran ayi 30 gundur",yil);
    break;
    case 7: printf("%d yilinin temmuz ayi 30 gundur",yil);
    break;
    case 8: printf("%d yilinin agustos ayi 30 gundur",yil);
    break;
    case 9: printf("%d yilinin eylul ayi 30 gundur",yil);
    break;
    case 10: printf("%d yilinin ekim ayi 30 gundur",yil);
    break;
    case 11: printf("%d yilinin kasim ayi 30 gundur",yil);
    break;
    case 12: printf("%d yilinin aralik ayi 30 gundur",yil);
    break;
}
}

}
