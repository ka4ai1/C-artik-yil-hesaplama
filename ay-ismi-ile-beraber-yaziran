else if(ay==2){
    printf("%d yilinin subat ayi 28 gundur",yil,ay);
}
else if(ay==1 || ay==3 || ay==5 || ay==7 || ay==8 || ay==10 || ay==12){
    
switch(ay){
    case 1: printf("%d yilinin ocak ayi 31 gundur",yil);
    break;
    case 3: printf("%d yilinin mart ayi 31 gundur",yil);
    break;
    case 5: printf("%d yilinin mayis ayi 31 gundur",yil);
